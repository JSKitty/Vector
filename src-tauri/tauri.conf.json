{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vector",
  "mainBinaryName": "Vector",
  "identifier": "io.vectorapp",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vector",
        "minWidth": 375,
        "width": 375,
        "minHeight": 550,
        "height": 650,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' https: asset: http://asset.localhost; media-src 'self' https: asset: http://asset.localhost; style-src 'self' 'unsafe-inline'; connect-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["$DOWNLOAD/vector/*", "$DOCUMENT/vector/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "SocialNetworking",
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "dmg": {
				"background": "./assets/dmg_background.png",
				"windowSize": {
					"height": 425,
					"width": 660
				},
        "applicationFolderPosition": {
          "x": 330,
          "y": 300
        },
        "appPosition": {
          "x": 330,
          "y": 70
        }
			}
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
